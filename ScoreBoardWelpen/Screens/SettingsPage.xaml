<Page
    x:Class="ScoreBoardWelpen.Screens.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScoreBoardWelpen.Screens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Black">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent"
                    Margin = "50">
            <Button x:Name="BtnShutdown" Style="{StaticResource ButtonRevealStyle}" Foreground="White"
                    Content="Afsluiten" FontSize="30" Click="BtnShutdown_Click" Margin=" 50,20"
                    MinWidth="300" Background="DarkCyan"/>
            <Button x:Name="BtnRestart" Style="{StaticResource ButtonRevealStyle}" Foreground="White"
                    Content="Herstarten" FontSize="30" Click="BtnShutdown_Click" Background="DarkCyan"
                    MinWidth="300" Margin="50,20"/>
        </StackPanel>
    </Grid>
</Page>
