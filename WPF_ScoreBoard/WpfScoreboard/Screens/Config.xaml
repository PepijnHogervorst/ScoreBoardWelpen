<Page x:Class="WpfScoreboard.Screens.Config"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfScoreboard.Screens"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      Title="Config">

    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center">
            <materialDesign:Card BorderThickness="1"
                                 BorderBrush="Black"
                                 HorizontalAlignment="Center"
                                 Margin="10"
                                 Width="400">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="TxtPointsHeader"
                               Text="Punten"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="5"
                               Foreground="{StaticResource PrimaryHueMidBrush}" />
                    <Grid VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Opacity"
                                        Value="0.8" />
                                <Setter Property="Margin"
                                        Value="10,5" />
                                <Setter Property="Foreground"
                                        Value="White" />
                                <Setter Property="HorizontalAlignment"
                                        Value="Center" />
                            </Style>

                            <Style TargetType="TextBox"
                                   BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="Margin"
                                        Value="10,0,10,5" />
                                <Setter Property="Foreground"
                                        Value="White" />
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Center" />
                            </Style>
                        </Grid.Resources>
                        
                        <TextBlock x:Name="TxtGroup1"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Text="Groep 1:" />
                        <TextBlock x:Name="TxtGroup2"
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Text="Groep 2:" />
                        <TextBlock x:Name="TxtGroup3"
                                   Grid.Row="0"
                                   Grid.Column="2"
                                   Text="Groep 3:" />
                        <TextBlock x:Name="TxtGroup4"
                                   Grid.Row="0"
                                   Grid.Column="3"
                                   Text="Groep 4:" />
                        <TextBlock x:Name="TxtGroup5"
                                   Grid.Row="0"
                                   Grid.Column="4"
                                   Text="Groep 5:" />
                        <TextBlock x:Name="TxtGroup6"
                                   Grid.Row="0"
                                   Grid.Column="5"
                                   Text="Groep 6:" />

                        <TextBlock x:Name="TxtPreviousPoints1"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   d:Text="1"
                                   ToolTip="Huidig punten aantal"/>
                        <TextBlock x:Name="TxtPreviousPoints2"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   d:Text="2" 
                                   ToolTip="Huidig punten aantal"/>
                        <TextBlock x:Name="TxtPreviousPoints3"
                                   Grid.Row="1"
                                   Grid.Column="2"
                                   d:Text="3" 
                                   ToolTip="Huidig punten aantal"/>
                        <TextBlock x:Name="TxtPreviousPoints4"
                                   Grid.Row="1"
                                   Grid.Column="3"
                                   d:Text="4" 
                                   ToolTip="Huidig punten aantal"/>
                        <TextBlock x:Name="TxtPreviousPoints5"
                                   Grid.Row="1"
                                   Grid.Column="4"
                                   d:Text="5" 
                                   ToolTip="Huidig punten aantal"/>
                        <TextBlock x:Name="TxtPreviousPoints6"
                                   Grid.Row="1"
                                   Grid.Column="5"
                                   d:Text="6" 
                                   ToolTip="Huidig punten aantal"/>

                        <TextBox x:Name="TxtBoxGroup1"
                                 Grid.Row="2"
                                 Grid.Column="0"
                                 TextChanged="TxtBoxGroup_TextChanged"
                                 InputScope="Number"
                                 MaxLength="3"
                                 Foreground="White" />
                        <TextBox x:Name="TxtBoxGroup2"
                                 Grid.Row="2"
                                 Grid.Column="1"
                                 TextChanged="TxtBoxGroup_TextChanged"
                                 InputScope="Number"
                                 MaxLength="3"
                                 Foreground="White" />
                        <TextBox x:Name="TxtBoxGroup3"
                                 Grid.Row="2"
                                 Grid.Column="2"
                                 TextChanged="TxtBoxGroup_TextChanged"
                                 InputScope="Number"
                                 MaxLength="3"
                                 Foreground="White" />
                        <TextBox x:Name="TxtBoxGroup4"
                                 Grid.Row="2"
                                 Grid.Column="3"
                                 TextChanged="TxtBoxGroup_TextChanged"
                                 InputScope="Number"
                                 MaxLength="3"
                                 Foreground="White" />
                        <TextBox x:Name="TxtBoxGroup5"
                                 Grid.Row="2"
                                 Grid.Column="4"
                                 TextChanged="TxtBoxGroup_TextChanged"
                                 InputScope="Number"
                                 MaxLength="3"
                                 Foreground="White" />
                        <TextBox x:Name="TxtBoxGroup6"
                                 Grid.Row="2"
                                 Grid.Column="5"
                                 TextChanged="TxtBoxGroup_TextChanged"
                                 InputScope="Number"
                                 MaxLength="3"
                                 Foreground="White" />
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
            <materialDesign:Card BorderThickness="1"
                                 BorderBrush="Black"
                                 HorizontalAlignment="Center"
                                 Margin="10"
                                 Width="400">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--#region Row 0 -->
                    <TextBlock x:Name="TxtDateHeader"
                               Text="Datum"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="5"
                               Grid.Row="0"
                               Foreground="{StaticResource PrimaryHueMidBrush}" />
                    <!--#endregion-->

                    <!--#region Row 1 -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Grid.Row="1">
                        <TextBlock x:Name="TxtStartDate"
                                   Text="Start van zomerkamp: "
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   Margin="13,5"
                                   Foreground="{StaticResource  MaterialDesignDarkForeground}"
                                   Opacity="0.8" />
                        <DatePicker x:Name="DatePickerStartDate"
                                    Margin="5"
                                    FontSize="18"
                                    SelectedDateChanged="DatePickerStartDate_SelectedDateChanged" />
                    </StackPanel>
                    <!--#endregion-->

                    <!--#region Row 2 -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Grid.Row="2">
                        <TextBlock x:Name="TxtCurrentDate"
                                   Text="Huidige datum: "
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   Margin="5"
                                   Foreground="{StaticResource  MaterialDesignDarkForeground}"
                                   Opacity="0.8" />
                        <DatePicker x:Name="DatePickerCurrentDate"
                                    Margin="5"
                                    FontSize="18"
                                    SelectedDateChanged="DatePickerCurrentDate_SelectedDateChanged" />
                    </StackPanel>
                    <!--#endregion-->
                </Grid>
            </materialDesign:Card >

            <materialDesign:Card BorderThickness="1"
                                 BorderBrush="Black"
                                 HorizontalAlignment="Center"
                                 Margin="10"
                                 Width="400">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--#region Row 0 -->
                    <TextBlock x:Name="TxtResetHeader"
                               Text="Begin opnieuw"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="5"
                               HorizontalAlignment="Left"
                               Grid.Row="0"
                               Foreground="{StaticResource PrimaryHueMidBrush}" />
                    <!--#endregion-->


                    <Button x:Name="BtnResetGroupStart"
                            Content="Reset start groep naar 1"
                            MinWidth="200"
                            MinHeight="30"
                            FontSize="18"
                            Margin="20,5"
                            Click="BtnResetGroupStart_Click"
                            Grid.Row="1" />
                </Grid>
            </materialDesign:Card>
        </StackPanel>
    </Grid>
</Page>
